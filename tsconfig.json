{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017", "es5", "es6", "es7"],
    "outDir": "./dist",
    "strict": true
  },
  "exclude": ["docs/*", "webpack.config.*", "*.js", "examples/*"]
}
